@model AkademisyenProfil.Models.Fakulteler
@{
    ViewData["Title"] = "fakulteekle";
    Layout = "~/Views/Shared/adminlayout.cshtml";
}

<div class="row">
    <div class="col-lg-12">
        <div class="card">
            <div class="card-header">
                <strong>FAKÜLTE EKLE</strong>
            </div>
            <div class="card-body card-block">
                <form action="" method="post" enctype="multipart/form-data" class="form-horizontal">
                    <label><strong>YENİ FAKÜLTE</strong></label>
                    @Html.TextBoxFor(x => x.fakultead, new { @class = "form-control" })
                    <br />
                    <label><strong>FAKÜLTE LOGO</strong></label><br />
                    <input type="file" name="fakultelogo" class="form-control" /><br />
                    <button class="btn btn-primary btn-sm">
                        <i class="fa fa-dot-circle-o"></i> Faküte Ekle
                    </button>
                </form>
            </div>
         
        </div>   
    </div>
</div>
