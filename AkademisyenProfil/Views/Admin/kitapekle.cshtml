@model AkademisyenProfil.Models.Kitaplar
@{
    ViewData["Title"] = "kitapekle";
    Layout = "~/Views/Shared/adminlayout.cshtml";
}

<div class="row">
    <div class="col-lg-12">
        <div class="card">
            <div class="card-header">
                <strong>KİTAP EKLE</strong>
            </div>
            <div class="card-body card-block">
                <form asp-controller="Admin" asp-action="kitapekle" method="post" enctype="multipart/form-data" class="form-horizontal">
                    <label><strong>YENİ KİTAP</strong></label>
                    <input type="text" class="form-control" name="kitapad" />
                    <br />
                    <label><strong>AKADEMİSYEN</strong></label>
                    @Html.DropDownListFor(m => m.Akademisyenler.akano, (List<SelectListItem>)ViewBag.dgr, new { @class = "form-control" })
                    <br />
                    <button class="btn btn-primary btn-sm">
                        <i class="fa fa-dot-circle-o"></i> Kitap Ekle
                    </button>
                </form>
            </div>
        </div>
    </div>
</div>