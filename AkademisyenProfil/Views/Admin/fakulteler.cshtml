@using AkademisyenProfil.Models
@model List<Fakulteler>
@{
    ViewData["Title"] = "fakulteler";
    Layout = "~/Views/Shared/adminlayout.cshtml";
}

<div class="row">
    <div class="col-md-6">
        <!-- DATA TABLE -->
        <h3 class="title-5 m-b-35"> <strong>FAKÜLTELER</strong></h3>
    </div>
    <div class="table-responsive table-responsive-data2">
        <table class="table table-data2">
            <thead>
                <tr>
                    <th><strong>FAKULTE NO</strong></th>
                    <th><strong>FAKULTE LOGO</strong></th>
                    <th><strong>FAKULTE AD </strong></th>
                    <th><strong>İŞLEM</strong></th>
                </tr>
            </thead>
            <tbody>
                
                    @foreach (var x in Model)
                    {
                <tr class="tr-shadow">
                    <td>@x.fakulteno</td>
                    <td><img src="@x.fakultelogo" alt="Alternate Text" width="100px" height="90px" /></td>
                    <td>@x.fakultead</td>
                    <td>
                        <div class="table-data-feature">
                            <a href="/Admin/FakulteSil/@x.fakulteno">
                                <button class="item" data-toggle="tooltip" data-placement="top" title="Delete">
                                    <i class="zmdi zmdi-delete"></i>
                                </button>
                            </a>
                        </div>
                    </td>
                </tr>
                        }

                   
                </tbody>
        </table>
    </div>
</div>


