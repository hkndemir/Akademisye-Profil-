@model AkademisyenProfil.Models.Bolumler


@{
    ViewData["Title"] = "bolumekle";
    Layout = "~/Views/Shared/adminlayout.cshtml";
}


<div class="row">
    <div class="col-lg-12">
        <div class="card">
            <div class="card-header">
                <strong>BÖLÜM EKLE</strong>
            </div>
            <div class="card-body card-block">
                <form asp-controller="Admin" asp-action="bolumekle" method="post" enctype="multipart/form-data" class="form-horizontal">
                    <label><strong>YENİ BÖLÜM</strong></label>
                    <input type="text" class="form-control" name="bolumad" />
                    <br />
                    <label><strong>FAKÜLTE</strong></label>
                    @Html.DropDownListFor(m => m.Fakulteler.fakulteno, (List<SelectListItem>)ViewBag.dgr, new { @class = "form-control" })
                    <br />
                    <label><strong>LOGO</strong></label><br />
                    <input type="file" name="bollogo" class="form-control" />
                    <br />
                    <button class="btn btn-primary btn-sm">
                        <i class="fa fa-dot-circle-o"></i> Bölüm Ekle
                    </button>
                </form>
            </div>
            
        </div>
    </div>
</div>

